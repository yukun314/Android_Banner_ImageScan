<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.zyk.test.MainActivity">

    <Button
        android:id="@+id/activity_main_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#4848ea"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="test AutoScrollBanner"/>

    <Button
        android:id="@+id/activity_main_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_button1"
        android:layout_marginTop="20dp"
        android:background="#4848ea"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="test ImageViewScan"/>

</RelativeLayout>
